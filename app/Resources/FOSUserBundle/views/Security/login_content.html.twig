{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group form-group-lg">
        <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" id="username" name="_username" value="{{ last_username }}" required="required" />
        <br>
        <input type="password" placeholder="{{ 'security.login.password'|trans }}" class="form-control" id="password" name="_password" required="required" />
        <br>
        <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <input type="submit"
                   class="btn btn-success btn-group-justified btn-block"
                   id="_submit"
                   name="_submit"
               value="{{ 'security.login.submit'|trans }}" />
        </div>
            <br>

            <br>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <a class="btn btn-primary btn-group-justified btn-block" href="{{ path('fos_user_resetting_request') }}"><i class="fa fa-repeat"></i> Mot de passe oubli√©</a>
            </div>
        <br>


        </div>

    </div>
</form>
