{% extends "MHMailBundle::layout.html.twig" %}

{% block title %}
    Selection - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Liste de couleurs</h2>
    <hr>
    <div id="contain" >
        <div class="well">
            <table cellspacing="10" cellpadding="10" border="1" bgcolor="#ffffff" width="750">
                <tbody>
                    {% for police in listPolice %}
                        <tr>
                            <td width="15%" align="center">
                                {{ police.taille | upper }}
                            </td>
                            <td width="15%" align="center">
                                <span style="font-size: {{ police.taille }}px;">
                                    {{ police.taille }}
                                </span>
                            </td>
                            <td width="50%" align="center">
                                <span style="font-size: {{ police.taille }}px;">
                                    abcdef
                                    ABCDEF
                                    12345
                                </span>
                            </td>
                            <td width="10%" align="center">
                                <a class="btn btn-warning" href="{{ path('mh_mail_police_edit', {'id': police.id} ) }}"> Modifier</a>
                            </td>
                            <td width="10%" align="center">
                                <a class="btn btn-danger" href="{{ path('mh_mail_police_delete', {'id': police.id}) }}"> Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br>
            <br>
            <a class="btn btn-primary" href="{{ path('mh_mail_police_add') }}">Ajouter</a>
        </div>
    </div>
    <br>
    <a class="btn btn-default" href="{{ path('mh_mail_home') }}">Retour Ã   l'accueil</a>

{% endblock %}

