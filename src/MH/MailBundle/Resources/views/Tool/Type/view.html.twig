{% extends "MHMailBundle::layout.html.twig" %}

{% block title %}
    Selection - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Liste des types</h2>
    <hr>
    <div id="contain" >
        <div class="well">
            <table cellspacing="10" cellpadding="10" border="1" bgcolor="#ffffff" width="750">
                <tbody>
                    {% for type in listType %}
                        <tr>
                            <td width="15%" align="center">
                                {{ type.slug }}
                            </td>
                            <td width="15%" align="center">
                                {{ type.name }}
                            </td>

                            <td width="25%" align="center">
                                {{ type.imgsrc }}
                            </td>

                            <td width="25%" align="center">
                                {{ type.imgalt }}
                            </td>

                            <td width="10%" align="center">
                                <a class="btn btn-warning" href="{{ path('mh_mail_type_edit', {'id': type.id} ) }}"> Modifier</a>
                            </td>
                            <td width="10%" align="center">
                                <a class="btn btn-danger" href="{{ path('mh_mail_type_delete', {'id': type.id}) }}"> Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br>
            <br>
            <a class="btn btn-primary" href="{{ path('mh_mail_type_add') }}">Ajouter</a>
        </div>
    </div>
    <br>
    <a class="btn btn-default" href="{{ path('mh_mail_home') }}">Retour Ã   l'accueil</a>

{% endblock %}

