{% extends "MHNewsletterBundle::layout.html.twig" %}

{% block title %}
    Suppression - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Supprimer une Couleur</h2>
    <hr>
    <p>La suppresion de l'image est irreversible<br>
    Souhaitez-vous poursuivre ?</p>

    <div class="well">
        <form action="{{ path('mh_mail_image_delete', {'id':id}) }}" method="post">
            <input type="submit" value="Supprimer" class="btn btn-danger"/>
            {{ form_rest(form) }}
        </form>
    </div>
    <a class="btn btn-default" href="{{ path('mh_mail_image_view', {'id': id}) }}" >Retour</a>

    <hr>
{% endblock %}