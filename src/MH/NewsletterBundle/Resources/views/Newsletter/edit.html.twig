{% extends "MHNewsletterBundle::layout.html.twig" %}

{% block title %}
    Edition - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Edition Newsletter</h2>

    <div id="contain" >
        <div class="panel-group" id="accordion">
            {% for rubrique in newsletter.rubriques %}
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#{{ rubrique.id }}">
                                {{ rubrique.name }}</a>
                        </h4>
                    </div>
                    <div id="{{ rubrique.id }}" class="panel-collapse collapse in">
                        <div class="panel-body">
                            {% for post in rubrique.posts %}
                                <div class="well well-sm">
                                    {{ post.titre }}<br>
                                </div>
                            {% endfor %}
                            <a class="btn btn-primary" href="{{ path('mh_newsletter_post_add', {'id': rubrique.id}    ) }}">new Post</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <br>
            <a class="btn btn-primary" href="{{ path('mh_newsletter_rubrique_add', {'id': newsletter.id}    ) }}" target="_blank">Ajouter une rubrique</a>
        </div>
    </div>


{% endblock %}

{% block bundle_javascript %}

{% endblock %}

