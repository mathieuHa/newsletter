{% extends "MHNewsletterBundle::layout.html.twig" %}

{% block bundle_css %}

{% endblock %}

{% block title %}
    Edition - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Edition Newsletter</h2>
    <hr>
        <div class="panel-group" id="accordion">
            <ul class="list-unstyled rubrique-sortable">
            {% for rubrique in newsletter.rubriques | sortbyfield('position') %}
            <li  id="rubrique_{{ rubrique.id }}">
                <div class="panel panel-success">

                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#rubrique{{ rubrique.id }}">
                                {{ rubrique.name }}</a>
                        </h4>
                    </div>
                    <div id="rubrique{{ rubrique.id }}" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="panel-group" id="accordion{{ rubrique.id }}">
                            <ul class="list-unstyled post-sortable">

                                {% for post in rubrique.posts | sortbyfield('position') %}
                                    <li class="toto" id="post_{{ post.id }}">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h4 class="panel-title" >
                                                    <a class="link-title" data-toggle="collapse" data-parent="#accordion{{ rubrique.id }}" href="#post{{ post.id }}rubrique{{ rubrique.id }}">
                                                        {{ post.titre }}</a>
                                                    <div class="btn btn-group-xs pull-right">
                                                    <a class="btn btn-warning" title="Modifier" data-toggle="modal"
                                                       data-target="#post-form-modal" data-remote="false" href="{{ path('mh_newsletter_post_edit',  {'id': post.id}    ) }}"><i class="glyphicon glyphicon-edit" aria-hidden="true"> Modifier</i></a>
                                                    <a class="btn btn-danger" title="Supprimer" data-toggle="modal"
                                                       data-target="#post-form-modal" data-remote="false" href="{{ path('mh_newsletter_post_delete', {'id': post.id}    ) }}"><i class="glyphicon glyphicon-trash" aria-hidden="true"> Supprimer</i></a>
                                                    </div>
                                                </h4>
                                                <br>
                                            </div>
                                            <div id="post{{ post.id }}rubrique{{ rubrique.id }}" class="panel-collapse collapse">
                                                <div class="panel-body">
                                                    <div class="col-md-10 col-xs-9">
                                                        <div class="content-update">
                                                        {{ post.content|markdown|replace({'<p>':'', '</p>':''})|raw }}
                                                        </div><br>
                                                        {% if post.lien is not empty %}
                                                            <a
                                                                    href="{{ post.lien }}"
                                                                    target="_blank"
                                                                    style="display: inline-block;text-decoration: none;font-family: Helvetica, Arial, sans-serif;color: #2c87c3;"><span
                                                                        style="color: #2c87c3;text-decoration: none;">> {{ post.textelien }}</span></a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                    </li>
                                {% endfor %}
                            </ul>
                            </div>

                            <div class="row">
                                <div class="col-lg-9 col-md-6 col-xs-6">
                                    <a class="btn btn-primary" data-toggle="modal"
                                       data-target="#post-form-modal" data-remote="false" href="{{ path('mh_newsletter_post_add', {'id': rubrique.id}    ) }}">new Post</a>
                                </div>
                                <div class="col-lg-3 col-md-6 col-xs-6">
                                    <a class="btn btn-warning" href="{{ path('mh_newsletter_rubrique_edit',  {'id': rubrique.id}    ) }}">Modifier</a>
                                    <a class="btn btn-danger" href="{{ path('mh_newsletter_rubrique_delete', {'id': rubrique.id}    ) }}">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </li>

            {% endfor %}
            </ul>
            <br>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a class="btn btn-primary" href="{{ path('mh_newsletter_rubrique_add', {'id': newsletter.id}    ) }}" >Ajouter une rubrique</a>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ path('mh_newsletter_view',{'id':newsletter.id}) }}" class="btn btn-info" target="_blank">
                        <span class="glyphicon glyphicon-expand"></span>
                        Afficher
                    </a>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a class="btn btn-warning" href="{{ path('mh_newsletter_edit_header',  {'id': newsletter.id}    ) }}">Modifier L'entÃªte</a>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ path('mh_newsletter_mail',{'id':newsletter.id}) }}" class="btn btn-default" target="_blank">
                        <span class="glyphicon glyphicon-envelope"></span>
                        Mail
                    </a>
                </div>
            </div>

        </div>

    <div id="post-form-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" id="post-content">
            </div>
        </div>
    </div>


{% endblock %}

{% block bundle_javascript %}
    <script type="text/javascript">
        $(document).ready(function () {

            $(".post-sortable").sortable({
            cursor: "move",
            update: function () {
                var order_serialize = $(this).sortable("serialize", {key: "posts[]"});

                $.ajax({
                    type: "POST",
                    url: "{{ path('mh_newsletter_post_order') }}",
                    data: order_serialize,
                    error: function () {
                        console.log('error');
                    }
                });
            }
            });
            $(".rubrique-sortable").sortable({
                cursor: "move",
                update: function () {
                    var order_serialize = $(this).sortable("serialize", {key: "rubriques[]"});

                    $.ajax({
                        type: "POST",
                        url: "{{ path('mh_newsletter_rubrique_order') }}",
                        data: order_serialize,
                        error: function () {
                            console.log('error');
                        }
                    });
                }
            });
        });
    </script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/mhnewsletter/js/main.js') }}"></script>

{% endblock %}

