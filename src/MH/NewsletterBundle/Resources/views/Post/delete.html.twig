{% extends "MHNewsletterBundle::layout.html.twig" %}

{% block title %}
    Suppression - {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <h2>Supprimer un Post</h2>

    <p>La suppresion du post est irreversible<br>
    Souhaitez-vous poursuivre ?</p>

    <div class="well">
        <form action="{{ path('mh_newsletter_post_delete', {'id':post.id}) }}" method="post">
            <input type="submit" value="Supprimer" class="btn btn-danger"/>
            {{ form_rest(form) }}
        </form>
    </div>
    <hr>
{% endblock %}